{
  "name": "twig-tools",
  "displayName": "Twig Tools",
  "description": "Twig tooling for VS Code",
  "author": "Mikhail Gunin <mikhail.gunin.a@gmail.com>",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "twig",
        "path": "./twig/snippets/filters.json"
      },
      {
        "language": "twig",
        "path": "./twig/snippets/twig.json"
      },
      {
        "language": "twig",
        "path": "./twig/snippets/functions.json"
      }
    ],
    "languages": [
      {
        "id": "twig",
        "aliases": [
          "Twig",
          "html.twig"
        ],
        "extensions": [
          ".twig",
          ".html"
        ],
        "configuration": "./twig/twig.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "twig",
        "scopeName": "text.html.twig",
        "path": "./twig/syntaxes/twig.tmLanguage"
      }
    ],
    "commands": [
      {
        "command": "twig-tools.find-usage",
        "title": "Twig: Find Vue component usage in php"
      },
      {
        "command": "twig-tools.get-affected-routes",
        "title": "Twig: Get affected routes"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/node-dir": "^0.0.34",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.4",
    "php-parser": "^3.1.4",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "zx": "^7.2.3"
  }
}
